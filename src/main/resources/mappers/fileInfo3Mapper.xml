<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="fileInfo3">
    <!--    첨부된 파일 정보 보기-->
    <select id="fileInfoDetail" resultType="kr.co.haebop.domain.FileInfo3">
        select * from fileInfo3 where lecno=#{lecno}
    </select>


    <update id="fileboardEdit">
        update fileInfo3 set saveFolder=#{saveFolder}, originFile=#{originFile}, saveFile=#{saveFile} where lecno=#{lecno}
    </update>


    <!-- 자료실 번호 별 파일 리스트 가져오기 -->
    <select id="fileInfoList" resultType="kr.co.haebop.domain.FileInfo3">
        select * from fileInfo3
        where lecno = #{lecno}
    </select>

    <select id="fileInfoList2" resultType="kr.co.haebop.domain.FileInfo3">
        select * from fileInfo3
    </select>

    <insert id="fileRegister" parameterType="fileInfo3">
        insert into fileInfo3 (lecno, savefolder, originfile, savefile)
        values
        <foreach collection="fileInfos" item="fileInfo3" separator=" , ">
            (#{lecno}, #{fileInfo3.saveFolder}, #{fileInfo3.originFile}, #{fileInfo3.saveFile})
        </foreach>
    </insert>




    <!-- 파일 삭제 -->
    <delete id="fileInfoDelete">
        delete from fileInfo3
        where lecno = #{lecno}
    </delete>



    <!-- 파일 추가 -->
    <insert id="fileInfoInsert">
        insert into fileInfo3(lecno, savefolder, originfile, savefile)
        values
        <foreach collection="fileInfos" item="fileInfo" separator=" , ">
            (#{lecno}, #{fileInfo.saveFolder}, #{fileInfo.originFile}, #{fileInfo.saveFile})
        </foreach>
    </insert>


</mapper>